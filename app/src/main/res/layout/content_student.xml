<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Student"
    tools:showIn="@layout/app_bar_student">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp">

        <TableRow
            android:background="#cf8550"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAlignment="center"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textAlignment="center"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"/>
        </TableRow>

        <TableRow
            android:background="#ECEFF1"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201001"
                android:layout_marginLeft="2dp"
                android:padding="0dp"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Access Control to Home Devices using Mobile Technology"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ryan Richard P. Aguila\nLorenz F. Amor\nJoel J. Buenaventura\nBryan B. dela Paz"
                android:layout_marginLeft="5dp"
                />
        </TableRow>

        <TableRow
            android:background="#ECEFF1"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201101"
                android:layout_marginLeft="2dp"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DNA: Diagnostic Tool and Navigator for Automobiles"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="Athena Bernadette S. Aguilar\nAngelika C. Fillon\nRalph O.Liberato\nElton John A. Yazon"/>
        </TableRow>
        <TableRow
            android:background="#ECEFF1"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201111"
                android:layout_marginLeft="2dp"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Android Jelly Bean"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Patricia Nabars\nJose Marquez"
                android:layout_marginLeft="5dp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>